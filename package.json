{
  "name": "swagmark",
  "version": "0.1.1",
  "description": "OpenAPI YAML から GitHub プレビューで Swagger 風に見える Markdown を生成するツール",
  "type": "module",
  "main": "src/convert.mjs",
  "bin": {
    "swagmark": "./bin/cli.js"
  },
  "scripts": {
    "start": "node bin/cli.js",
    "example": "node bin/cli.js examples/petstore/petstore.yaml -o examples/petstore/output",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "update-licenses": "license-checker-rseidelsohn --production --excludePackages \"$npm_package_name@$npm_package_version\" --out THIRD_PARTY_LICENSES --limitAttributes licenses,repository,publisher && cat THIRD_PARTY_LICENSES.manual >> THIRD_PARTY_LICENSES",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "format": "biome format --write .",
    "format:check": "biome format ."
  },
  "files": [
    "bin/",
    "src/",
    "templates/"
  ],
  "keywords": [
    "openapi",
    "swagger",
    "markdown",
    "docs"
  ],
  "author": "rysk-tanaka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rysk-tanaka/swagmark.git"
  },
  "packageManager": "pnpm@10.30.1",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "js-yaml": "^4.1.1",
    "widdershins": "^4.0.1"
  },
  "pnpm": {
    "overrides": {
      "markdown-it": "^14.1.0"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@vitest/coverage-v8": "^4.0.0",
    "license-checker-rseidelsohn": "^4.4.2",
    "vitest": "^4.0.0"
  }
}
